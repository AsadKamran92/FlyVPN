<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <ImageView android:id="@+id/nodelist_imgaeview_country"
               android:layout_width="40dp"
               android:layout_height="match_parent"
               android:background="@drawable/us"/>

    <TextView android:id="@+id/nodelist_textview_name"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="节点名称"/>

    <TextView android:id="@+id/nodelist_textview_ping"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""/>

    <RadioButton android:id="@+id/nodelist_radiobutton"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:checked="false"
                 android:text=""/>

</LinearLayout>